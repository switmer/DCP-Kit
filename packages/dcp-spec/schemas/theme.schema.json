{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://dcp-schema.org/theme",
    "title": "DCP Theme Tokens",
    "type": "object",
    "required": ["name", "version", "tokens"],
    "properties": {
      "name": { "type": "string" },
      "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
      "description": { "type": "string" },
      "source": { "type": "string" },
      "tokenFormat": { "type": "string" },
      "tokens": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/$defs/tokenNode"
        }
      }
    },
    "$defs": {
      "tokenNode": {
        "type": "object",
        "properties": {
          "value": { "type": "string" },
          "type": {
            "type": "string",
            "enum": [
              "color", "spacing", "radius", "font", "fontSize", "lineHeight",
              "zIndex", "opacity", "duration", "easing", "shadow", "border"
            ]
          },
          "description": { "type": "string" }
        },
        "additionalProperties": {
          "$ref": "#/$defs/tokenNode"
        }
      }
    },
    "additionalProperties": false
  }
  