{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dcp.dev/schemas/registry.schema.json",
  "version": "1.0.0",
  "title": "Design Context Protocol Registry Schema",
  "description": "Schema for DCP registry items - standardized format for design system components, themes, and blocks",
  "type": "object",
  "required": ["$schema", "name", "type"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema reference for validation"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Kebab-case identifier for the registry item"
    },
    "type": {
      "type": "string",
      "enum": [
        "registry:ui",
        "registry:component", 
        "registry:block",
        "registry:style",
        "registry:theme",
        "registry:hook",
        "registry:lib",
        "registry:page"
      ],
      "description": "Type classification for the registry item"
    },
    "title": {
      "type": "string",
      "description": "Human-readable display name"
    },
    "description": {
      "type": "string",
      "description": "Brief description of functionality and usage"
    },
    "files": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/file"
      },
      "description": "Files included in this registry item"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "NPM package dependencies required"
    },
    "registryDependencies": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "Other registry items this depends on"
    },
    "cssVars": {
      "$ref": "#/$defs/cssVars",
      "description": "CSS custom properties for theming"
    },
    "envVars": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][A-Z0-9_]*$": {
          "type": "string"
        }
      },
      "description": "Environment variables this component uses"
    },
    "meta": {
      "$ref": "#/$defs/meta",
      "description": "Additional metadata for tooling and AI agents"
    }
  },
  "$defs": {
    "file": {
      "type": "object",
      "required": ["path", "type"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Relative path to the file"
        },
        "type": {
          "type": "string",
          "enum": [
            "registry:component",
            "registry:style", 
            "registry:hook",
            "registry:lib",
            "registry:page",
            "registry:test",
            "registry:story"
          ],
          "description": "File type classification"
        },
        "target": {
          "type": "string",
          "description": "Installation target path (overrides default)"
        },
        "content": {
          "type": "string",
          "description": "Inline file content for zero-fetch installs"
        }
      }
    },
    "cssVars": {
      "type": "object",
      "properties": {
        "light": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "type": "string"
            }
          },
          "description": "CSS variables for light theme"
        },
        "dark": {
          "type": "object", 
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "type": "string"
            }
          },
          "description": "CSS variables for dark theme"
        },
        "theme": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9-]*$": {
              "type": "string"
            }
          },
          "description": "Theme-level CSS variables (fonts, spacing, etc.)"
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for extraction accuracy"
        },
        "source": {
          "type": "string",
          "enum": ["ast-analysis", "dcp-tokens", "theme-context", "manual"],
          "description": "Source of the registry item data"
        },
        "blockPatterns": {
          "type": "object",
          "properties": {
            "confidence": {"type": "number"},
            "patterns": {"type": "array"},
            "suggestedType": {"type": "string"}
          },
          "description": "Block pattern detection metadata"
        },
        "cssVarsMetadata": {
          "type": "object",
          "properties": {
            "totalTokens": {"type": "integer"},
            "sources": {"type": "object"},
            "averageConfidence": {"type": "number"}
          },
          "description": "CSS variables extraction metadata"
        },
        "intent": {
          "type": "string",
          "description": "Semantic intent or use case (e.g., 'form-input:country-selector')"
        },
        "useCases": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Common use cases for this component"
        },
        "layoutHints": {
          "type": "object",
          "properties": {
            "columns": {"type": "integer"},
            "hasSidebar": {"type": "boolean"},
            "hasHeader": {"type": "boolean"},
            "responsive": {"type": "boolean"}
          },
          "description": "Layout structure hints for blocks"
        }
      }
    }
  }
}