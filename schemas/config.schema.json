{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["registryName", "version"],
  "properties": {
    "registryName": {
      "type": "string",
      "description": "Name of the design system registry"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the registry"
    },
    "components": {
      "type": "string",
      "description": "Legacy: Path to components directory"
    },
    "componentSource": {
      "type": "string",
      "description": "Path to components directory"
    },
    "componentPatterns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Glob patterns for finding components"
    },
    "tokens": {
      "type": "string",
      "description": "Path to tokens file"
    },
    "output": {
      "type": "string",
      "description": "Output path for the registry"
    },
    "llmEnrich": {
      "type": "boolean",
      "description": "Enable LLM enrichment"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Schema version in YYYY-MM format",
      "default": "2024-03"
    },
    "storybook": {
      "type": "object",
      "properties": {
        "docsBuild": {
          "type": "boolean",
          "description": "Build Storybook docs alongside registry"
        },
        "configDir": {
          "type": "string",
          "default": ".storybook",
          "description": "Storybook config directory"
        },
        "staticDir": {
          "type": "string",
          "default": "storybook-static",
          "description": "Output directory for Storybook static build"
        },
        "toc": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Title for the table of contents"
            },
            "headingSelector": {
              "type": "string",
              "description": "CSS selector for TOC headings"
            },
            "ignoreSelector": {
              "type": "string",
              "description": "CSS selector for elements to ignore in TOC"
            }
          }
        }
      }
    }
  },
  "oneOf": [
    {
      "required": ["components"]
    },
    {
      "required": ["componentSource"]
    }
  ],
  "additionalProperties": false
} 