{
  "name": "dcp-transformer",
  "version": "1.4.3",
  "description": "LLM-Controllable CRISPR for Code: Agent-ready component mutation platform with JSON Patch precision",
  "type": "module",
  "bin": {
    "dcp": "./bin/dcp.js",
    "dcp-transformer": "./bin/dcp.js",
    "dcp-transform": "./bin/dcp-transformer.js",
    "dcp-mcp": "./mcp-server.js",
    "dcp-mcp-http": "./mcp-server-http.js"
  },
  "main": "./core/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./core": "./core/index.js",
    "./cli": "./bin/index.js"
  },
  "files": [
    "bin/",
    "commands/",
    "core/",
    "lib/",
    "schemas/",
    "templates/",
    "README.md",
    "AGENT_GUIDE.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "build": "tsc",
    "prepublishOnly": "echo 'Publishing dcp-transformer...'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "serve": "node commands/serve.js",
    "extract": "node commands/extract.js",
    "build:storybook": "storybook build --docs --dry-run-json > .storybook-meta.json && node commands/extract.js --storybook-json .storybook-meta.json"
  },
  "keywords": [
    "design-system",
    "component-library",
    "react",
    "typescript",
    "dcp",
    "design-tokens",
    "cli",
    "ai-agent",
    "llm",
    "mutation",
    "json-patch",
    "crispr-for-code",
    "agent-ready"
  ],
  "author": "Steve Witmer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevewitmer/dcp-transformer.git"
  },
  "bugs": {
    "url": "https://github.com/stevewitmer/dcp-transformer/issues"
  },
  "homepage": "https://github.com/stevewitmer/dcp-transformer#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/parser": "^7.26.0",
    "@babel/traverse": "^7.26.0",
    "@babel/types": "^7.26.0",
    "@modelcontextprotocol/sdk": "^0.6.1",
    "@vitejs/plugin-react": "^4.2.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "diff": "^7.0.0",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "fast-json-patch": "^3.1.1",
    "glob": "^10.3.3",
    "json-rpc-2.0": "^1.7.0",
    "ora": "^8.1.1",
    "quick-lru": "^7.0.1",
    "readline-sync": "^1.4.10",
    "simple-git": "^3.28.0",
    "vite": "^5.4.19",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^9.0.18",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@storybook/test": "^8.6.12",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "storybook": "^9.0.18",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@storybook/react": "^9.0.18",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
