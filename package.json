{
  "name": "dcp-workspace",
  "version": "2.0.0",
  "description": "Design Component Protocol - Workspace containing spec and toolkit packages",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspace @dcp/toolkit",
    "test:coverage": "npm run test:coverage --workspace @dcp/toolkit",
    "build": "npm run build --workspaces",
    "lint:spec": "npm run lint --workspace @dcp/spec",
    "build:spec": "npm pack --workspace @dcp/spec",
    "serve": "npm run serve --workspace @dcp/toolkit",
    "extract": "npm run extract --workspace @dcp/toolkit",
    "list:fluentui": "node scripts/list-fluentui-components.js",
    "docs:update-index": "sed -i '' \"s/Last Updated: .*/Last Updated: $(date '+%Y-%m-%d %H:%M:%S')/\" REPO_INDEX.md"
  },
  "keywords": [
    "design-component-protocol",
    "dcp",
    "workspace",
    "monorepo"
  ],
  "author": "Steve Witmer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevewitmer/dcp-transformer.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  }
}